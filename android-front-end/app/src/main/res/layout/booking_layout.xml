<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center">

    <TextView
        android:id="@+id/bookingHeader"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="1"
        android:text="Book Ticket"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bookingHeader"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fromLinearLayout">
            <TextView
                android:id="@+id/fromTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From:"
                android:textSize="24dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/fromEditText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/toLinearLayout"
            android:layout_below="@+id/fromLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/toTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To:"
                android:textSize="24dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/toEditText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toLinearLayout"
            android:layout_marginTop="2dp">
            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Date From:"
                android:textSize="24dp"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/dateEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:hint="MM/DD/YYYY"
                android:textSize="24dp"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/selectDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:background="@drawable/ic_calender" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dateLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateLayout"
            android:layout_marginTop="2dp">
            <TextView
                android:id="@+id/dateText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. of Passengers:"
                android:textSize="24dp"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                />
            <Spinner
                android:id="@+id/spinner1"
                android:layout_marginLeft="2dp"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:entries="@array/no_of_passengers_array" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateLayout2">
            <Button
                android:id="@+id/paymentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proceed to Payment"
                android:textAlignment="center"
                android:textSize="24dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
